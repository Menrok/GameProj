@model Game.Models.Hero

@{
    ViewData["Title"] = "Edytuj postać";
}

<h2>@ViewData["Title"]</h2>

<form method="post" action="@Url.Action("EditHero", "Character", new { id = Model.Id })">
    @Html.AntiForgeryToken()

    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="Name">Imię postaci</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label for="Class">Klasa postaci</label>
        <input type="text" class="form-control" id="Class" name="Class" value="@Model.Class" readonly />
    </div>

    <div class="form-group">
        <label for="Level">Poziom</label>
        <input type="number" class="form-control" id="Level" name="Level" value="@Model.Level" min="1" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
</form>

<a href="@Url.Action("CharacterSelection", "Character")" class="btn btn-secondary">Powrót do wyboru postaci</a>
