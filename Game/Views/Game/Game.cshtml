@model Game.Models.GameViewModel

<div class="container">
    <h1>Witaj, @Model.Hero.Name!</h1>

    <div class="row">
        <div class="col-md-6">
            <h2>Postać</h2>
            <div class="character-details">
                <h3>Szczegóły postaci</h3>
                <p><strong>Imię:</strong> @Model.Hero.Name</p>
                <p><strong>Klasa:</strong> @Model.Hero.Class</p>
                <p><strong>Poziom:</strong> @Model.Hero.Level</p>
                <p><strong>Doświadczenie:</strong> @Model.Hero.Experience</p>
                <p><strong>Siła:</strong> @Model.Hero.Strength</p>
                <p><strong>Zręczność:</strong> @Model.Hero.Dexterity</p>
                <p><strong>Inteligencja:</strong> @Model.Hero.Intelligence</p>
                <p><strong>Obrona:</strong> @Model.Hero.Defense</p>
                <p><strong>Zdrowie:</strong> @Model.Hero.Health</p>
                <p><strong>Punkty do rozdania:</strong> @Model.Hero.PointsToSpend</p>
            </div>

            <div class="equipment">
                <h3>Ekwipunek</h3>
                <ul>
                    @if (Model.Hero.Items != null && Model.Hero.Items.Any())
                    {
                        @foreach (var item in Model.Hero.Items)
                        {
                            <li>
                                @item.Name
                                <button class="btn btn-sm btn-primary"
                                        onclick="equipItem(@item.Id)">
                                    Załóż
                                </button>
                            </li>
                        }
                    }
                    else
                    {
                        <p>Brak przedmiotów w ekwipunku.</p>
                    }
                </ul>
            </div>
        </div>
        <div class="col-md-6">
            <h2>Misje</h2>
            <div class="quests">
                @if (Model.Quests != null && Model.Quests.Any())
                {
                    <ul>
                        @foreach (var quest in Model.Quests)
                        {
                            <li>
                                <h4>@quest.Name</h4>
                                <p>@quest.Description</p>
                                <p><strong>Trudność:</strong> @quest.Difficulty</p>
                                <p><strong>Doświadczenie za ukończenie:</strong> @quest.RewardExperience</p>
                                <a href="@Url.Action("StartQuest", "Game", new { questId = quest.Id })" class="btn btn-primary">
                                    Wykonaj Quest
                                </a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>Brak dostępnych misji.</p>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function equipItem(itemId) {
        alert("Zakładam przedmiot o ID: " + itemId);
    }
</script>
